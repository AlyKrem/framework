{
    "log_level": "notice",
    "parametrised": true,
    "port": [
        "[[server.port1]]",
        "[[server.port2]]",
        "[[server.port3]]"
    ],
    "defaultModule":"registry",
    "datasources":[
      {
        "name":"Db",
        "module":"core/impl/datasource/mongodb",
        "config": {
          "uri": "[[db.uri]]",
          "options": {
            "server": {
              "socketOptions":{
                "keepAlive": 1
              }
            }
          },
          "connectionLimit": 10,
          "user": "[[db.user]]",
          "password": "[[db.pwd]]"
        }
      }
    ],
    "metaDs": "Db",
    "dataDs": "Db",
    "sessionDs": "Db",
    "auth": {
      "denyTopLevel": true,
      "authCallbacks": [],
      "localAuthDS": "Db"
    },
    "policy": [
        {
            "module": "core/impl/access/aclmongo",
            "config": {
                "accessDs": "Db"
            }
        }
    ],
    "session": {
      "secret": "ion:demo:secret",
      "resave": false,
      "saveUninitialized": true
    }
}
