{
    "log_level": "error",
    "port": [
        8888,
        8889
    ],
    "defaultModule":"registry",
    "datasources":[
      {
        "name":"Db",
        "module":"core/impl/datasource/mongodb",
        "config": {
          "uri": "mongodb://127.0.0.1:27017/database",
          "options": {
            "server": {
              "socketOptions":{
                "keepAlive": 1
              }
            }
          },
          "connectionLimit": 10,
          "schema": "database",
          "user": "user",
          "password": "pwd"
        }
      }
    ],
    "globalDs": "Db",
    "localAuthDS": "Db",
    "sessionDs": "Db",
    "policy": [
        {
            "module": "core/impl/access/aclmongo",
            "config": {
                "accessDs": "Db"
            }
        }
    ]
}
