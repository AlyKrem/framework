<!DOCTYPE html>
<html>
<head><title>Платформа ION: Вход</title>
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="/css/auth.css">
    <meta name="robots" content="noindex,nofollow">
</head>
<body>
<div class="demo">
    <h1>Вход</h1>

    <div class="auth-form">
      <%
      if (errors.length) {
      errors.forEach(function (error) {
      %>
      <div id="error" class="error-msg"><%= error %></div>
      <%
      });
      }
      %>
        <form action="/auth" method="post">
            <div><input type="text" name="username" placeholder="логин" class="input user"></div>
            <div><input type="password" name="password" placeholder="пароль" class="input password"></div>
            <div class="buttons">
                <button type="submit">Войти</button>
            </div>
            <div class="forgot-password pull-left">
              <a href="/register"><b>Зарегистрироваться</b></a>
            </div>
        </form>
    </div>
    <div class="soc-auth">
      <a href="/auth/fb">Войти через Facebook</a>
      <span>&nbsp;&nbsp;|&nbsp;&nbsp;</span>
      <a href="/auth/vk">Войти через Vk.com</a>
    </div>
</div>
</body>
</html>
